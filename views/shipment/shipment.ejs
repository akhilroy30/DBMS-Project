<% include ../layout/header %>
   <h1 class="text-center">
      Shipments
   </h1>
   <div class="row">
      <div class="col-md-9"></div>
      <div class="col-md-3">
         <a class="btn btn-lg btn-success" href="/shipment/add">New Shipment</a>
      </div>
   </div>
   <div class="container d-flex flex-wrap">
      <% shipments.forEach( shipment => {%>
         <div class="card bg-dark text-white m-4" style="width: 18rem;">
            <div class="card-body">
               <h5 class="card-title">
                  <div class="row">
                     <div class="col-md-10">
                        <%= shipment.sName %>
                     </div>
                     <% if(Object.keys(current.admin).length){ %>
                        <div class="col-md-2">
                           <form action="/shipment/delete" method="post">
                              <select name="sid" class="d-none">
                                 <option><%= shipment._id %></option>
                              </select>
                              <button class="btn btn-sm btn-danger">X</button>
                           </form>
                        </div>
                     <% } %>
                  </div>
               </h5>
               <ul class="list-group">
                  <li class="list-group-item list-group-item-dark"><b>Location:</b> <%= shipment.location %></li>
                  <% if(shipment.products.length > 0){ %>
                     <li class="list-group-item list-group-item-dark">
                        <b>Products:</b>
                        <ul class="list-group mt-2">
                           <% shipment.products.forEach( product => { %>
                              <li class="list-group-item list-group-item-dark"><%= product %></li>
                           <% }) %>   
                        </ul>
                     </li>
                  <% } %>
               </ul>
            </div>
         </div>
      <% }) %>
   </div>
<% include ../layout/footer %>